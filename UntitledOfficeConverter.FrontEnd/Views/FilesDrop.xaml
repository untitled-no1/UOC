<UserControl x:Class="UntitledOfficeConverter.FrontEnd.Views.FilesDrop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UntitledOfficeConverter.FrontEnd.Views"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Name="ImagePanel" Drop="ImagePanel_OnDrop" AllowDrop="true">
            <StackPanel.Background>
                <ImageBrush ImageSource="../Resources/bg.jpg"/>
            </StackPanel.Background>
        </StackPanel>
    </Grid>
</UserControl>
